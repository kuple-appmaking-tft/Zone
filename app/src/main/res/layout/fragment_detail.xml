<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clickable="true"
    tools:context="navigation.DetailViewFragment">

    <ScrollView
        android:id="@+id/feedHome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:scrollbars="none">

        <RelativeLayout
            android:id="@+id/feedFilter"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <HorizontalScrollView
                android:id="@+id/feedLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btnBus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_toLeftOf="@+id/btnMeal"
                        android:background="@drawable/ui_contents_background"
                        android:gravity="center"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:singleLine="true"
                        android:text="셔틀버스"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/btnMeal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="5dp"
                        android:background="@drawable/ui_contents_background"
                        android:gravity="center"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:singleLine="true"
                        android:text="학식"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/btnTimeTable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@+id/btnMeal"
                        android:background="@drawable/ui_contents_background"
                        android:gravity="center"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="5dp"
                        android:singleLine="true"
                        android:text="시간표"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </LinearLayout>
            </HorizontalScrollView>

            <ListView
                android:id="@+id/kuple_feed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/feedLayout"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/btnReadMore"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/kuple_feed"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="70dp"
                android:background="@drawable/ui_contents_background"
                android:paddingHorizontal="5dp"
                android:text="more" />

        </RelativeLayout>

    </ScrollView>

    <ProgressBar
        android:id="@+id/pbTmp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />
</RelativeLayout>